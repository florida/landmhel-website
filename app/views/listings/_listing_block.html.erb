<% if listings.nil? %>

  No available listings

<% else %>
  <% listings.each do |listing| %>
  <div class="col-sm-6 col-md-4 col-lg-4">
    <div class="panel panel-primary listing">
      <div class="panel-heading" >
        <h3 class="panel-title"><%= link_to truncate(listing.address, length: 35), listing_details_path(listing), onclick: "ga('send', 'event', 'listing_block', 'click', 'panel_title');" %></h3>
      </div>
      <div class="panel-body">

        <% if listing.images != [] %>
        <div class="listing-featured-image">
          <% unless listing.images.empty? %>
            <%= link_to image_tag(listing.images.first.image_file.url(:medium), alt: listing.address), listing_details_path(listing), onclick: "ga('send', 'event', 'listing_block', 'click', 'listing_image_#{listing.id}');" %>
          <% end %>
        </div>
        <% end %>
        <ul class="list-group listing-details">
          <li class="list-group-item"><%= label_tag("Price") %><%= value_tag(number_to_currency(listing.price, unit: "$")) %></li>
          <li class="list-group-item"><%= label_tag("Area") %><%= value_tag(listing.area) %></li>
          <li class="list-group-item"><%= label_tag("Type") %><%= value_tag(listing.property_type) %></li>
          <li class="list-group-item"><%= label_tag("Bedrooms") %><%= value_tag(listing.bedrooms) %></li>
          <li class="list-group-item"><%= label_tag("Bathrooms") %><%= value_tag(listing.bathrooms) %></li>
        </ul>
      </div>
    </div>
  </div>
  <% end %>

<% end %>


